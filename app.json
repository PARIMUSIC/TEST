{
  "name": "Telegram-Voice-VC-Userbot",
  "description": "A Telegram VC userbot that joins VC, plays audio, accepts audio from a specific user, and supports manual volume control.",
  "repository": "https://github.com/PARIMUSIC/TEST",
  "env": {
    "API_ID": {
      "description": "Telegram API ID from my.telegram.org",
      "required": true
    },
    "API_HASH": {
      "description": "Telegram API HASH from my.telegram.org",
      "required": true
    },
    "SESSION_STRING": {
      "description": "Pyrogram Session String",
      "required": true
    },
    "AUDIO_FILE": {
      "description": "Path to audio file (default: audio.mp3)",
      "value": "audio.mp3"
    }
  },
  "buildpacks": [
    { "url": "heroku/python" }
  ],
  "formation": {
    "worker": {
      "quantity": 1,
      "size": "free"
    }
  },
  "addons": [],
  "stack": "heroku-22"
}
